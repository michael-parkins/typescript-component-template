{
  "name": "typescript-component-template",
  "version": "1.0.1",
  "description": "Template project for TypeScript modules.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist/**/*"
  ],
  "scripts": {
    "build": "tsc",
    "build:ci": "npm run clean && npm run build && npm run test",
    "clean": "rimraf ./dist",
    "lint": "eslint ./src/**/*.ts",
    "test": "mocha -r ts-node/register ./src/**/*.spec.ts"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/michael-parkins/typescript-component-template.git"
  },
  "keywords": [
    "typescript",
    "template"
  ],
  "author": "Michael Parkins",
  "license": "MIT",
  "devDependencies": {
    "@types/chai": "^4.2.21",
    "@types/mocha": "^8.2.3",
    "@typescript-eslint/eslint-plugin": "^4.28.2",
    "@typescript-eslint/parser": "^4.28.2",
    "chai": "^4.3.4",
    "eslint": "^7.30.0",
    "mocha": "^9.0.2",
    "ts-node": "^10.0.0",
    "typescript": "^4.3.5"
  }
}
