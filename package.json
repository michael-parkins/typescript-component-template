{
  "name": "typescript-component-template",
  "version": "1.2.0",
  "description": "Template project for TypeScript modules.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist/**/*"
  ],
  "scripts": {
    "build": "tsc",
    "build:ci": "npm run clean && npm run build && npm run test",
    "clean": "rimraf ./dist",
    "lint": "eslint ./src/**/*.ts",
    "test": "mocha -r ts-node/register ./src/**/*.spec.ts"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/michael-parkins/typescript-component-template.git"
  },
  "keywords": [
    "typescript",
    "template"
  ],
  "author": "Michael Parkins",
  "license": "MIT",
  "devDependencies": {
    "@types/chai": "^4.3.0",
    "@types/mocha": "^9.1.0",
    "@typescript-eslint/eslint-plugin": "^5.14.0",
    "@typescript-eslint/parser": "^5.14.0",
    "chai": "^4.3.6",
    "eslint": "^8.11.0",
    "mocha": "^9.2.2",
    "ts-node": "^10.7.0",
    "typescript": "^4.6.2"
  }
}
